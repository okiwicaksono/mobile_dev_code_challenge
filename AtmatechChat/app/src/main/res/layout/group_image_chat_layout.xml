<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal"
    >
    <FrameLayout
        android:id="@+id/group_photo_one"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/photoholder_one"
            android:scaleType="fitXY"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/group_photo_two"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/group_photo_one"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/photoholder_two"
            android:src="@color/colorAccent"
            android:scaleType="fitXY"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/group_photo_three"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_below="@id/group_photo_one"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/photoholder_three"
            android:src="@color/colorAccent"
            android:scaleType="fitXY"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/group_photo_four"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_below="@id/group_photo_one"
        android:layout_toEndOf="@id/group_photo_one"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/photoholder_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/photo_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            />
    </FrameLayout>
</RelativeLayout>