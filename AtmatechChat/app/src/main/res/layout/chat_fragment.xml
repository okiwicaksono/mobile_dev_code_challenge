<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatfeature.v.ChatFragment">

    <FrameLayout
        android:id="@+id/profile_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTabHome"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pp_changer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circular_bg_imageview"
                android:backgroundTint="@color/black"
                android:text="A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/name_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:gravity="center"
                />
        </LinearLayout>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_below="@id/profile_group"
        />
    <GridLayout
        android:id="@+id/group_feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_below="@id/chat_list"
        android:layout_marginHorizontal="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by: "
            android:textSize="18sp"
            android:layout_gravity="start|center"
            />
        <LinearLayout
            android:id="@+id/filter_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/show_info_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="None"
                android:gravity="center_vertical"
                android:textColor="#000"
                />
            <ImageView
                android:id="@+id/filter_msg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:padding="5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional filter: "
            android:textSize="18sp"
            android:layout_gravity="start|center"
            />
        <LinearLayout
            android:id="@+id/additional_filter_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/show_info_additional_filter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="None"
                android:gravity="center_vertical"
                android:textColor="#000"
                />
            <ImageView
                android:id="@+id/additional_filter_msg_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:padding="5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send as: "
            android:textSize="18sp"
            android:layout_gravity="start|center"
            />
        <Spinner
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            />
    </GridLayout>
    <LinearLayout
        android:id="@+id/filter_choice_group"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/group_feature"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:background="@color/greysilver"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/filter_choice_apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Filter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:background="@color/teal_200"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/additional_filter_choice_group"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/group_feature"
        android:layout_alignParentEnd="true"
        android:translationY="30dp"
        android:visibility="gone"
        android:background="@color/greysilver"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/additional_filter_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/additional_filter_choice_apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Filter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:background="@color/teal_200"
            android:padding="5dp"
            />
    </LinearLayout>
</RelativeLayout>