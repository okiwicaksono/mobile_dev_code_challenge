<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_controller"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="November 14"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_general_rectangle"
        android:backgroundTint="@color/turqoise"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/chat_bubble"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/receiver_bubble"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/cp"
        android:layout_alignTop="@id/message_chat"
        android:layout_alignBottom="@id/add_send_btn"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="-5dp"
        />

    <ImageView
        android:id="@+id/cp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circular_bg_imageview"
        android:backgroundTint="@color/greysilver"
        android:layout_below="@id/date_view"
        android:layout_toEndOf="@id/message_chat"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/message_chat"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:layout_below="@id/date_view"
        android:layout_alignTop="@id/cp"
        android:layout_alignBottom="@id/cp"
        android:layout_alignParentStart="true"
        android:paddingEnd="5dp"
        android:paddingStart="0dp"
        android:gravity="end|center_vertical"
        android:textColor="#000"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/time_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:30"
        android:layout_alignParentStart="true"
        android:paddingEnd="5dp"
        android:paddingStart="0dp"
        android:layout_marginStart="24dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/cp"
        />
    <View
        android:id="@+id/horz_separator_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greysilver"
        android:layout_alignStart="@id/chat_bubble"
        android:layout_alignEnd="@id/chat_bubble"
        android:layout_below="@id/time_chat"
        android:layout_marginStart="16dp"
        />
    <LinearLayout
        android:id="@+id/add_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignStart="@id/chat_bubble"
        android:layout_alignEnd="@id/chat_bubble"
        android:layout_below="@id/horz_separator_line"
        android:layout_marginStart="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim Pesan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:paddingVertical="5dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greysilver"
            android:paddingVertical="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Kontak"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:paddingVertical="5dp"
            />
    </LinearLayout>
</RelativeLayout>